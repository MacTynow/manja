{% extends "ManjaSourcingBundle::layout.html.twig" %}

{% block title %}
    Pearls - {{ parent() }}
{% endblock %}

{% block content %}
    <a href="{{ path('manja_sourcing_add', { 'data': "pearl" }) }}" class="btn btn-primary" role="button">Add pearl</a>

    <hr/>

    {% include "ManjaSourcingBundle:Sourcing:sourcing_list.html.twig" %}

    <table id="table1" class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>id</th>
            <th>Origin</th>
            <th>Drilling</th>
            <th>Shape</th>
            <th>Shape Grade</th>
            <th>Colors</th>
            <th>Luster Grade</th>
            <th>Surface Grade</th>
            <th>Size</th>
            <th>Price /piece</th>            
            <th>Supplier</th>            
        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>
            <div class="dropdown"> <a class="dropdown-toggle" data-toggle="dropdown" href="#"> {{ item.getIdSrcPearls() }} <col-md- class="caret"></col-md-> </a>
                <ul class="dropdown-menu">
                    <li><a href="#">Edit</a></li>
                    <li><a href="{{ path('manja_sourcing_remove', { 'category': "pearl", 'id': item.getIdSrcPearls() }) }}">Delete</a></li>
                </ul>
            </div>
            </td>
            <td>{{ item.getOrigin() }}</td>
            <td>{{ item.getDrilling() }}</td>
            <td>{{ item.getShape() }}</td>
            <td>{{ item.getShapeGrade() }}</td>
            <td>{{ item.getColor1() }} {{ item.getColor2() }}</td>
            <td>{{ item.getLusterGrade() }}</td>
            <td>{{ item.getSurfaceGrade() }}</td>
            <td>{{ item.getSize1() }} {{ item.getSize2() }}</td>
            <td>{{ item.getPricePiece().getPrice() }}</td>
            <td>
            <div class="modal hide fade" id="infos">
                <div class="modal-header"> <a class="close" data-dismiss="modal">Ã—</a>
                    <h3>Details</h3>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer"> <a class="btn btn-info" data-dismiss="modal">Close</a> </div>
            </div>
            <a data-toggle="modal" href="{{ path('manja_sourcing_item_sheet', { 'category': "supplier", 'id': item.getFurnisher().getIdsupplier() }) }}" data-target="#infos">{{ item.getFurnisher().getCompany() }}</a>
            </td>

        </tr>
    {% endfor %}
    </tbody> 
    </table>
 {% endblock %}
