<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Supplier details</h4>
  </div>
  <div class="modal-body">
    <div class="row">   
        <div class="col-md-8">
        <table class="table table-bordered table-condensed table-stripped">
            <tr>
                <td>ID </td>          
                <td>{{ item.getIdsupplier() }}</td> 
            </tr>
            <tr>
                <td>Company</td> 
                <td>{{ item.getCompany() }}</td> 
            </tr>
            <tr>
                <td>Product Category</td>
                <td>{{ item.getProductCategory() }}</td>
            </tr>
            <tr>
                <td>Supplies</td>
                <td>
                    {% if item.getSuppliesDiamond() == 1 %} <p>Diamonds</p> {% endif %}                
                    {% if item.getSuppliesStones() == 1 %} <p>Stones</p> {% endif %}                
                    {% if item.getSuppliesPearls() == 1 %} <p>Pearls</p> {% endif %}                
                    {% if item.getSuppliesMetal() == 1 %} <p>Metal</p> {% endif %}
                    {% if item.getSuppliesChains() == 1 %} <p>Chains</p> {% endif %}
                    {% if item.getSuppliesAccLength() == 1 %} <p>Accessories/Length</p> {% endif %}
                    {% if item.getSuppliesAccPiece() == 1 %} <p>Accessories/Piece</p> {% endif %}
                    {% if item.getSuppliesFindings() == 1 %} <p>Findings</p> {% endif %}
                    {% if item.getSuppliesTask() == 1 %} <p>Tasks</p> {% endif %}</td>
            </tr>
            <tr>
                <td>Rank</td>
                <td>{{ item.getRank().getRank() }}</td>
            </tr>

        </table>
        </div>
        <div class="col-md-4 well well-sm">
            <img src="{{ asset('bundles/manjasourcing/images/hyene-1257455213.jpg') }}" class="img-responsive" alt="supplier image" />
        </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->